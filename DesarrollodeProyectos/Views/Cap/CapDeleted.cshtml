@using DesarrollodeProyectos.Identity

@model CapModel

@{
    ViewData["Title"] = "Borrar la gorra";
}

<h3 class="mb-3"></h3>

<form asp-asp-controller="Cap" asp-action="CapDeleted">

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Información de la Gorra</h5>
            <h6 class="card-subtitle mb-2 text-body-secondary">¿Está seguro que desea borrar la gorra?</h6>
            <p class="card-text">Gorra: @Model.Name</p>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-outline-danger">Borrar</button>
    <a class="btn btn-outline-secondary" asp-action="CapList" asp-controller="Cap">Cancelar</a>
</form>
