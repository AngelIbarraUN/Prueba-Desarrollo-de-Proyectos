@using DesarrollodeProyectos.Identity
@model CategoryModel
@{
    ViewData["Title"] = "Editar Categoría";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CategoryEdit" asp-controller="Category">
    <input type="hidden" asp-for="Id">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre de la categoría">
        <label asp-for="Name">Nombre</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Description" placeholder="Descripción de la categoría">
        <label asp-for="Description">Descripción</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button class="btn btn-outline-primary">Guardar</button>
    <a class="btn btn-outline-secondary" asp-action="CategoryList" asp-controller="Category">Regresar</a>
</form>
