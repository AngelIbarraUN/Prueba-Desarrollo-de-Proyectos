@using DesarrollodeProyectos.Identity
@model List<CategoryModel>
@{
    ViewData["Title"] = "Lista de Categorías";
    int numero = 0;
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>
<a class="btn btn-outline-primary" asp-action="CategoryAdd" asp-controller="Category">Agregar Categoría</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Fecha de Registro</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            numero++;
            <tr>
                <th scope="row">@numero</th>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.CreationTime.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-outline-info" asp-action="CategoryEdit" asp-controller="Category" asp-route-id="@category.Id">Editar</a>
                    <a class="btn btn-outline-danger" asp-action="CategoryDelete" asp-controller="Category" asp-route-id="@category.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
