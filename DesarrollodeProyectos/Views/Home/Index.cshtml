    <style>
        /* Estilos del slider */
        #carouselExampleIndicators {
            width: 100%;
            margin: auto;
        }

        .carousel-item {
            transition: opacity 0.8s ease-in-out, transform 0.8s ease-in-out;
            opacity: 0;
            transform: scale(1.05);
        }

        .carousel-item.active {
            opacity: 1;
            transform: scale(1);
        }

        .carousel-item img {
            width: 100%;
            height: 600px;
            object-fit: cover;
        }

        /* Estilos para los indicadores */
        .carousel-indicators button {
            background-color: #ffc107;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            opacity: 0.7;
            transition: opacity 0.3s;
        }

        .carousel-indicators .active {
            opacity: 1;
            transform: scale(1.3);
        }

        /* Controles personalizados */
        .carousel-control-prev-icon, .carousel-control-next-icon {
            background-color: rgba(0, 0, 0, 0.6);
            border-radius: 50%;
            padding: 10px;
        }

        /* Estilos para el texto de la imprenta */
        .imprenta-texto {
            color: #333;
            font-family: 'Georgia', serif;
            line-height: 1.7;
            text-align: justify;
        }

        .imprenta-texto h2 {
            color: #000;
            font-family: 'Arial', sans-serif;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .imprenta-texto strong {
            color: #ff0000;
            font-weight: bolder;
        }

        .imprenta-texto .contact-info {
            margin-top: 30px;
            text-align: center;
        }

        .imprenta-texto .contact-info h3 {
            color: #000;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .imprenta-texto .contact-info p {
            margin-bottom: 8px;
        }

        /* Estilos para la sección debajo del mapa */
        .info-adicional {
            background-color: #f8f8f8;
            padding: 30px;
            text-align: center;
        }

        .info-adicional h3 {
            color: #000;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .info-adicional p {
            color: #555;
        }
    </style>
</head>

