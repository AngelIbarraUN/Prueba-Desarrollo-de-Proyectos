@model List<DesarrollodeProyectos.Models.Order>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Mis Pedidos</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID del Pedido</th>
                    <th>Fecha del Pedido</th>
                    <th>Total del Pedido</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            <span class="font-weight-bold">@order.Id</span>
                        </td>
                        <td>
                            <span class="text-muted">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                        </td>
                        <td>
                            <span class="text-success">@order.TotalAmount.ToString("C")</span>
                        </td>
                        <td>
                            <a href="/Order/Details?orderId=@order.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-file-alt"></i> Detalles
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">