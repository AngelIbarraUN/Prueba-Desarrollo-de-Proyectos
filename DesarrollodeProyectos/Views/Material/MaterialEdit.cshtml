@using DesarrollodeProyectos.Identity
@model MaterialModel

@{
    ViewData["Title"] = "Editar Material";
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>

<form asp-action="MaterialEdit" asp-controller="Material">
    <input type="hidden" asp-for="Id">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" placeholder="Nombre del material">
        <label asp-for="Name">Nombre</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Description" placeholder="Descripción del material">
        <label asp-for="Description">Descripción</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary">Guardar</button>
    <a class="btn btn-outline-secondary" asp-action="MaterialList" asp-controller="Material">Regresar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
