@using DesarrollodeProyectos.Identity

@model ShirtModel

@{
    ViewData["Title"] = "Eliminar Camiseta";
}
<link rel="stylesheet" href="~/css/borrar.css">

<div class="container-borrar">
    <div class="mac">
        <img src="~/imgadmin/red.svg" alt="">
        <img src="~/imgadmin/orange.svg" alt="">
        <img src="~/imgadmin/green.svg" alt="">
    </div>
    <div class="content-borrar">
        <h1>¿Estás seguro de que deseas eliminar la camiseta @Model.Name?</h1>
    </div>

    <form asp-controller="Shirt" asp-action="ShirtsDeleted">
        <button type="submit" class="boton">Eliminar</button>
        <button class="boton" asp-action="ShirtsList" asp-controller="Shirt">Cancelar</button>
    </form>
</div>
