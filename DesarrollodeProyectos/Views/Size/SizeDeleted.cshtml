@model DesarrollodeProyectos.Identity.SizeModel
@{
    ViewData["Title"] = "Eliminar Talla";
}

<h1>@ViewData["Title"]</h1>

<p>¿Está seguro de que desea eliminar la talla <strong>@Model.Name</strong>?</p>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Nombre de la Talla</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("SizeList", "Size")" class="btn btn-secondary">Cancelar</a>
</form>
