@model IEnumerable<DesarrollodeProyectos.Identity.SizeModel>
@{
    ViewData["Title"] = "Lista de Tallas";
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre de la Talla</th>
            <th>Fecha de Creaci√≥n</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var size in Model)
        {
            <tr>
                <td>@size.Name</td>
                <td>@size.CreationTime.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="@Url.Action("SizeEdit", "Size", new { id = size.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("SizeDeleted", "Size", new { id = size.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("SizeAdd", "Size")" class="btn btn-primary">Agregar Nueva Talla</a>
