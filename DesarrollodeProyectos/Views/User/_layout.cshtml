<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DesarrollodeProyectos</title>
    <script type="importmap"></script>
    
    <!-- Estilos para el fondo oscuro -->
    <style>
        /* Asegura que el fondo oscuro se aplique en toda la página */
        html, body {
            height: 100%;
            margin: 0;
            background-color: #1c1c1c; /* Fondo oscuro */
            color: white; /* Texto blanco */
        }

        /* Centrar el contenido en la página */
        .container {
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            background-color: #212121;
            border-radius: 15px;
            padding: 2rem;
            max-width: 400px;
            width: 100%;
        }

        /* Estilo para el encabezado */
        h1 {
            font-family: 'Georgia', serif;
            font-size: 3rem;
            text-align: center;
            color: white;
            margin-bottom: 1rem;
        }

        /* Fondo de los inputs */
        .form-control {
            background-color: #333;
            color: white;
            border: 2px solid #d32f2f;
            border-radius: 10px;
        }

        /* Botón de login */
        .btn-primary {
            background-color: #d32f2f;
            border-color: #d32f2f;
            border-radius: 10px;
        }
    </style>

    <!-- Estilos adicionales -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DesarrollodeProyectos.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="card">
            <h1>Login</h1>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
